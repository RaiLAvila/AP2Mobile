<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#D3D3D3"
    android:gravity="center">

    <EditText
        android:id="@+id/editTextNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite seu nome"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:backgroundTint="#000000"
        android:layout_marginBottom="16dp"/>



    <ImageView
        android:id="@+id/logoImagem"
        android:layout_width="340dp"
        android:layout_height="345dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/fotorai5">

    </ImageView>

    <TextView
        android:id="@+id/textViewPergunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qual o jogo favorito do RaÃ­ Lamper?"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/botao1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deathgarden: BLOODHARVEST" />

    <Button
        android:id="@+id/botao2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celeste" />

    <Button
        android:id="@+id/botao3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subnautica" />
</LinearLayout>
